<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddPostFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_post"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/tv_text_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahkan Gambar"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/img_add_post"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:hint="Judul"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_post_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:hint="Deskripsi"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center_horizontal"/>


    <ProgressBar
        android:id="@+id/load_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>