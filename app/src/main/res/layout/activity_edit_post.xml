<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPostActivity">

    <include
        android:id="@+id/edit_post_app_bar"
        layout="@layout/app_bar_layout"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_patch_post"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/img_patch_post"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:scaleType="centerCrop"
            android:background="@color/btn_search"/>

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_patch_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:hint="Judul"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_patch_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:hint="Deskripsi"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/load_edit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

</androidx.appcompat.widget.LinearLayoutCompat>